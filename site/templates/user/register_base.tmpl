<:wrap base.tmpl:>
<div align=center>
  <table width="250">
    <tr> 
      <th colspan="2" align="center"> 
        <p><b><font face="Verdana, Arial, Helvetica, sans-serif" size="3">User 
          Registration</font></b></p>
      </th>
    </tr>
    <:if Message:> 
    <tr> 
      <td colspan="2" align="center"> 
        <p><b><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:message:></font></b></p>
      </td>
    </tr>
    <:or Message:><:eif Message:> <:if User:> 
    <tr> 
      <td colspan="2"><font face="Verdana, Arial, Helvetica, sans-serif" size="2">You 
        are already logged on - Why register again?</font></td>
    </tr>
    <:or User:><:eif User:> 
    <form action="/cgi-bin/user.pl" method="post">
      <:ifCgi r:> 
      <input type="hidden" name="r" value="<:cgi r:>">
      <:or:><:eif:> 
      <tr> 
        <th align="left" nowrap><b><font face="Verdana, Arial, Helvetica, sans-serif" size="-2">Logon 
          Name:</font></b></th>
        <td> 
          <input type="text" name="userid" value="<:old userid:>" size="40" />
        </td>
      </tr>
      <tr> 
        <th align="left" nowrap><b><font face="Verdana, Arial, Helvetica, sans-serif" size="-2">Password:</font></b></th>
        <td> 
          <input type="password" name="password" value="" size="40" />
        </td>
      </tr>
      <tr> 
        <th align="left" nowrap><b><font face="Verdana, Arial, Helvetica, sans-serif" size="-2">Confirm 
          Password:</font></b></th>
        <td> 
          <input type="password" name="confirm_password" value="" size="40" />
        </td>
      </tr>
      <tr> 
        <th align="left" nowrap><b><font face="Verdana, Arial, Helvetica, sans-serif" size="-2">Email 
          Address:</font></b></th>
        <td> 
          <input type="text" name="email" value="<:old email:>" size="40" />
        </td>
      </tr>
      <tr> 
        <td colspan="2" align="left"><font face="Verdana, Arial, Helvetica, sans-serif" size="-2">If 
          you lose your password, you can have it emailed to your registered address.</font></td>
      </tr>
      <tr> 
        <td colspan="2" align="right"> 
          <input type="submit" name="register" value="Register" />
        </td>
      </tr>
      <tr> 
        <td align="left" colspan="2">
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr> 
              <td align="left" nowrap> <br>
                <a href="/cgi-bin/user.pl?show_lost_password=1"><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Lost 
                your password?</font></a></td>
              <td align="right" nowrap><br>
                <a href="/cgi-bin/user.pl?show_logon=1<:ifCgi r:>&r=<:cgi r:><:or:><:eif:>"><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Already 
                registered?</font></a></td>
            </tr>
          </table>
        </td>
      </tr>
    </form>
  </table>
</div>