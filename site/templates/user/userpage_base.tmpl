<:wrap base.tmpl:>

<div align="center">
  <p><a href="<:script:>?show_opts=1"><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Edit 
    User Profile</font></a></p>
  <table width="100%">
    <:if Message:> 
    <tr> 
      <th colspan="4" align="center"><b><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:message:></font></b></th>
    </tr>
    <:or Message:><:eif Message:> 
    <tr> 
      <th colspan="4" align="center"><font face="Verdana, Arial, Helvetica, sans-serif" size="3">Your 
        Orders</font></th>
    </tr>
    <:if Orders:> 
    <tr bgcolor="#CCCCFF"> 
      <th><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Order Id</font></th>
      <th><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Date</font></th>
      <th><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Total</font></th>
      <th><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Filled</font></th>
    </tr>
    <:iterator begin orders:> 
    <tr> 
      <td align="center"><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:order 
        id:></font></td>
      <td><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:date order 
        orderDate:></font></td>
      <td><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:money 
        order total:></font></td>
      <td align="center"><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:ifOrder 
        filled:>Yes<:or:>No<:eif:></font></td>
    </tr>
    <:if Items:> 
    <tr> 
      <td><font face="Verdana, Arial, Helvetica, sans-serif" size="2"></font></td>
      <td colspan="3"> 
        <table width="100%">
          <tr bgcolor="#CCCCFF"> 
            <th width="100%"><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Product</font></th>
            <th><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Quantity</font></th>
            <th><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Cost</font></th>
          </tr>
          <:iterator begin items:> 
          <tr> 
            <td width="100%"><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:product 
              title:></font></td>
            <td align="center"><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:item 
              units:></font></td>
            <td align="center"><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:money 
              item price:></font></td>
          </tr>
          <:if Prodfiles:> 
          <tr> 
            <th colspan="3"><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Files</font></th>
          </tr>
          <tr bgcolor="#CCCCFF"> 
            <th width="100%"><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Description</font></th>
            <th nowrap><font face="Verdana, Arial, Helvetica, sans-serif" size="2">File</font></th>
            <th><font face="Verdana, Arial, Helvetica, sans-serif" size="2">Size</font></th>
          </tr>
          <:iterator begin prodfiles:> 
          <tr> 
            <td width="100%"><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:prodfile 
              description:></font></td>
            <td nowrap><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:if 
              FileAvail:><a href="/cgi-bin/user.pl?download=1&file=<:prodfile id:>&order=<:order id:>&item=<:item id:>"><:prodfile 
              displayName:></a><:or FileAvail:><:prodfile displayName:><:eif FileAvail:></font></td>
            <td align="center"><font face="Verdana, Arial, Helvetica, sans-serif" size="2"><:prodfile 
              sizeInBytes:></font></td>
          </tr>
          <:iterator end prodfiles:> <:or Prodfiles:><:eif Prodfiles:> <:iterator 
          end items:> 
        </table>
      </td>
    </tr>
    <:or Items:><:eif Items:> <:iterator separator orders:> 
    <tr> 
      <td colspan="4"> 
        <hr noshade size="1" width="100%" />
      </td>
    </tr>
    <:iterator end orders:> <:or Orders:> 
    <tr> 
      <td colspan="4" align="center"><font face="Verdana, Arial, Helvetica, sans-serif" size="2">You 
        haven't made any orders yet.</font></td>
    </tr>
    <:eif Orders:> 
  </table>
</div>